<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="KnightRider.ElectionTracker.core.Candidate, ElectionTracker" table="candidate">
    <id name="ID" column="CandidateID" type="Int64">
      <generator class="identity"/>
    </id>
    <property name="FirstName" column="CandidateFirstName" type="String" length="100" not-null="true"/>
    <property name="MiddleName" column="CandidateMiddleName" type="String" length="100" not-null="false"/>
    <property name="LastName" column="CandidateLastName" type="String" length="100" not-null="true"/>
    <property name="Notes" column="CandidateNotes" type="String" not-null="false" />
    <many-to-one name="PoliticalParty" class="KnightRider.ElectionTracker.core.PoliticalParty, ElectionTracker" column="CandidatePoliticalPartyID" lazy="false"/>
    <property name="IsActive" column="CandidateIsActive" type="Boolean" not-null="true" />
  </class>
</hibernate-mapping>